<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Force /storage/ requests ke Laravel route - HARUS DI ATAS SEMUA RULE LAIN
    # Ini untuk fix 403 error di Railway - Apache tidak bisa serve file dari symlink
    # Match SEMUA request yang dimulai dengan /storage/ dan arahkan ke Laravel
    # Tidak peduli apakah file exists atau tidak - selalu ke Laravel
    # Gunakan REQUEST_URI untuk match, dan RewriteRule untuk route ke index.php
    # IMPORTANT: Rule ini HARUS di atas semua rule lain
    RewriteCond %{REQUEST_URI} ^/storage
    RewriteRule .* index.php [L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]
    
    # Biarkan Apache serve file lain langsung jika file exists
    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
